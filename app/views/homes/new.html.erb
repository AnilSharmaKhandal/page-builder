<%= form_for @home, url: homes_path, method: :post	 do |f| %>
  <%= f.label "Select a Page for Modification", :class => 'label_position'  %>
  <select name="page_id" class ="title_select">
  	<option value="null" selected="selected" >Select Page</option>
	  <% @pages.each do |page| %>
	  <option value="<%= page.id %>"><%= page.title %></option>
	  <% end %>   
	</select>
	<% @pages.each do |page| %>
		<input type="hidden" id="page_content_<%= page.id %>" value="<%= page.body_html %>">
	<% end %>   
	<br><br>
	<%= f.cktext_area :content,  :class => 'someclass', :id => 'ckeditor_content', :ckeditor => {:language => 'en'} %> 
<% end %>



<script>
$('.title_select').on('change',function(){
	var select_title = $(this).val();
	var body_content = $('#page_content_'+select_title).val();	
	CKEDITOR.instances['ckeditor_content'].setData(body_content);	
});
</script>

<style>
.label_position{
margin-left:15px;
margin-top:15px;
}
</style>


                                                                 